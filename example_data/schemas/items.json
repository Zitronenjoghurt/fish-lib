{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^[0-9]+$": {
      "type": "object",
      "required": [
        "name",
        "stackable",
        "default_properties"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the item"
        },
        "stackable": {
          "type": "boolean",
          "description": "If this item can be stacked or not"
        },
        "default_properties": {
          "type": "object",
          "required": [
            "item_type",
            "components"
          ],
          "properties": {
            "item_type": {
              "type": "string",
              "enum": [
                "None",
                "Rod"
              ]
            },
            "components": {
              "type": "object",
              "properties": {
                "Usage": {
                  "type": "object",
                  "properties": {
                    "times_used": {
                      "type": "integer",
                      "minimum": 0
                    }
                  },
                  "required": [
                    "times_used"
                  ]
                }
              }
            }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}