{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^[0-9]+$": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "timezone": {
          "type": "string"
        },
        "weather_seed": {
          "type": "integer"
        },
        "spring": {
          "type": "object",
          "properties": {
            "min_temp_c": {
              "type": "number"
            },
            "max_temp_c": {
              "type": "number"
            }
          },
          "required": [
            "min_temp_c",
            "max_temp_c"
          ]
        },
        "summer": {
          "type": "object",
          "properties": {
            "min_temp_c": {
              "type": "number"
            },
            "max_temp_c": {
              "type": "number"
            }
          },
          "required": [
            "min_temp_c",
            "max_temp_c"
          ]
        },
        "autumn": {
          "type": "object",
          "properties": {
            "min_temp_c": {
              "type": "number"
            },
            "max_temp_c": {
              "type": "number"
            }
          },
          "required": [
            "min_temp_c",
            "max_temp_c"
          ]
        },
        "winter": {
          "type": "object",
          "properties": {
            "min_temp_c": {
              "type": "number"
            },
            "max_temp_c": {
              "type": "number"
            }
          },
          "required": [
            "min_temp_c",
            "max_temp_c"
          ]
        }
      },
      "required": [
        "name",
        "timezone",
        "weather_seed",
        "spring",
        "summer",
        "autumn",
        "winter"
      ]
    }
  },
  "additionalProperties": false
}